{
  "mcpServers": {
    "nix": {
      "command": "nix",
      "args": [
        "run",
        "github:utensils/mcp-nixos",
        "--"
      ]
    }
  },
  "context": {
    "fileName": [
      "AGENTS.md",
      "GEMINI.md"
    ]
  },
  "ui": {
    "hideBanner": true,
    "hideFooter": false,
    "hideTips": true,
    "hideWindowTitle": false,
    "showCitations": true,
    "showLineNumbers": true,
    "showMemoryUsage": false,
    "theme": "ANSI",
    "footer": {
      "hideContextPercentage": false
    }
  },
  "ide": {
    "enabled": true,
    "hasSeenNudge": true
  },
  "security": {
    "auth": {
      "selectedType": "gemini-api-key"
    },
    "enablePermanentToolApproval": true
  },
  "output": {
    "format": "text"
  },
  "general": {
    "vimMode": false,
    "previewFeatures": true,
    "enablePromptCompletion": true
  },
  "tools": {
    "shell": {
      "showColor": true
    }
  }
}