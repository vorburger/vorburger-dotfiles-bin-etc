{
  "mcpServers": {
    "nix": {
      "command": "nix",
      "args": [
        "run",
        "github:utensils/mcp-nixos",
        "--"
      ]
    }
  },
  "context": {
    "fileName": [
      "AGENTS.md",
      "GEMINI.md"
    ]
  },
  "ui": {
    "hideBanner": true,
    "hideFooter": false,
    "hideTips": true,
    "hideWindowTitle": false,
    "showCitations": true,
    "showLineNumbers": true,
    "showMemoryUsage": true,
    "theme": "ANSI"
  },
  "ide": {
    "enabled": true,
    "hasSeenNudge": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "output": {
    "format": "text"
  },
  "general": {
    "vimMode": false
  }
}