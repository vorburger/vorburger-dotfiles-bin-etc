{
  "mcpServers": {
    "nix": {
      "command": "nix",
      "args": [
        "run",
        "github:utensils/mcp-nixos",
        "--"
      ]
    }
  },
  "context": {
    "fileName": [
      "AGENTS.md",
      "GEMINI.md"
    ]
  },
  "ui": {
    "hideBanner": "true",
    "hideFooter": "false",
    "hideTips": "true",
    "theme": "ANSI"
  },
  "ide": {
    "enabled": true,
    "hasSeenNudge": true
  },
  "security": {
    "auth": {
      "selectedType": "gemini-api-key"
    }
  },
  "ui.hideBanner": "true",
  "ui.hideFooter": "false",
  "ui.hideWindowTitle": "false",
  "ui.showCitations": "true",
  "ui.showLineNumbers": "true",
  "ui.showMemoryUsage": "true",
  "output": {
    "format": "text"
  },
  "general": {
    "vimMode": false
  }
}
