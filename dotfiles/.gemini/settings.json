{
  "mcpServers": {
    "github": {
      "httpUrl": "https://api.githubcopilot.com/mcp/",
      "trust": false,
      "headers": {
        "Authorization": "Bearer $GITHUB_PAT"
      }
    }
  },
  "context": {
    "fileName": ["AGENTS.md", "GEMINI.md"]
  },
  "ui": {
    "hideBanner": "true",
    "hideFooter": "false",
    "theme": "ANSI"
  },
  "ide": {
    "enabled": true,
    "hasSeenNudge": true
  },
  "security": {
    "auth": {
      "selectedType": "gemini-api-key"
    }
  },
  "ui.hideBanner": "true",
  "ui.hideFooter": "false",
  "ui.hideWindowTitle": "false",
  "ui.showCitations": "true",
  "ui.showLineNumbers": "true",
  "ui.showMemoryUsage": "true",
  "output": {
    "format": "text"
  }
}
