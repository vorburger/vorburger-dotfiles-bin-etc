# These aliases are shared between Bash and Fish
# Bash specific in dotfiles/bash.d/alias.bash, fish specific in dotfiles/fish/alias.fish

alias e="nano "
alias kc="kubectl "
alias b="bazelisk "

# https://github.com/vorburger/vorburger-dotfiles-bin-etc/blob/master/README.md#google-cloud-shell
alias cloud="gcloud cloud-shell ssh --ssh-flag=-A"

# Git
alias gl="git ls"
alias gll="git ll"
alias glg="git lg"
alias gst="git status"
alias gd="git wdiff"
alias ga="git add"
alias gc="git commit -m "
alias gca="git commit --amend"
alias gco="git checkout "
alias gpu="git push "
alias gpl="git pull "
alias gpf="git push --force vorburger"
alias gsy="git pull --rebase && git push"
# see ../bin/g* for more Git tools

